@{
}


<table>
    <tr>
        @foreach (DataColumn column in @Model.DataTable.Columns) 
        {
            <th>@column.ColumnName</th>
        }
    </tr>
    @foreach (DataRow row in @Model.DataTable.Rows)
    {
        <tr>
            @foreach (DataColumn column in @Model.DataTable.Columns)
            {
                <td>@row[@column.ColumnName]</td>
            }
        </tr>
    }
</table>